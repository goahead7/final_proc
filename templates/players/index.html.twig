{% extends 'base.html.twig' %}

{% block title %}Players index{% endblock %}

{% block body %}
    <h1>Players index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fio</th>
                <th>Role</th>
                <th>Command</th>
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.id }}</td>
                <td>{{ player.fio }}</td>
                <td>{{ player.role }}</td>
                <td>{{ player.command }}</td>
                <td>{{ player.age }}</td>
                <td>
                    <a href="{{ path('players_show', {'id': player.id}) }}">show</a>
                    <a href="{{ path('players_edit', {'id': player.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('players_new') }}">Create new</a>
{% endblock %}
